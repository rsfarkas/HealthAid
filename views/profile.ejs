<!doctype html>
<html>
<head>
    <title> HealthAid </title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="js/eip.min.js"></script>
    <script type="text/javascript" src="js/editable.js"></script>
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
        #popup-container {
            width: 1px;
            height: 1px;
            position: fixed;
            top: 20px;
            left: 30px;
        }

        .popup-content {
            display: flex;
            align-items: center;
            line-height: 24px;
        }

    </style>
</head>
<body>
<div class="container">
   <div id="popup-container">
        <div class="popup"></div>
    </div>
    <div class="alert alert-success hidden">
        <p>
            <span></span>
        </p>
    </div>

    <div class="page-header text-center">
      <h1><span class="fa"></span> We're glad to have you </h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/setup" class="btn btn-default btn-sm">Edit</a>
    </div>
                  <% if (user.local.email) { %>
                      <p>
                          <strong>hi </strong><%= user.local.email %><br>
                      </p>

                  <% } %>


    <div class="row">

        <!-- HEIGHT INFORMATION -->
        <% if (user.phi.height.visible) { %>
        <div class="col-sm-4">
            <div class="well">
                <h3><span class="fa fa-user"></span> Height </h3>

                    <p>
                    <span class="editable" id="height"> <%= user.phi.height.content %></span><br>
                    </p>
               <%  } %>

            </div>
        </div>

        <!-- WEIGHT INFORMATION -->
        <% if (user.phi.weight.visible) { %>
        <div class="col-sm-4">
            <div class="well">
                <h3><span class="fa fa-user"></span> Weight </h3>

                    <p>
                    <span class="editable" id="weight"> <%= user.phi.weight.content %></span><br>
                    </p>
               <%  } %>

            </div>
        </div>

        <!-- BP INFORMATION -->
        <% if (user.phi.bp.visible) { %>
        <div class="col-sm-4">
            <div class="well">
                <h3><span class="fa fa-user"></span> BP </h3>

                    <p>
                    <span class="editable" id="bp"> <%= user.phi.bp.content %></span><br>
                    </p>
               <%  } %>

            </div>
        </div>

        <!-- HR INFORMATION -->
        <% if (user.phi.hr.visible) { %>
        <div class="col-sm-4">
            <div class="well">
                <h3><span class="fa fa-user"></span> HR </h3>
                    <p>
                    <span class="editable" id="hr"> <%= user.phi.hr.content %></span><br>
                    </p>
               <%  } %>

            </div>
        </div>

        <!-- PAP INFORMATION -->
        <% if (user.phi.pap.visible) { %>
        <div class="col-sm-4">
            <div class="well">
                <h3><span class="fa fa-user"></span> PAP </h3>

                    <p>
                    <span class="editable" id="pap"> <%= user.phi.pap.content %></span><br>
                    </p>
               <%  } %>

            </div>
        </div>

        <!-- SKIN INFORMATION -->
        <% if (user.phi.skin.visible) { %>
        <div class="col-sm-4">
            <div class="well">
                <h3><span class="fa fa-user"></span> Skin </h3>
                    <p>
                    <span class="editable" id="skin"> <%= user.phi.skin.content %> </span><br>
                    </p>
               <%  } %>

            </div>
        </div>
    </div>

</div>
</body>
</html>


